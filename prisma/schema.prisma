model Rejecttransactiondate {
  id                 Int       @id @default(autoincrement())
  rejectiondate      DateTime
  status             String    @default("ACTIVE")
  reason             String?
}

model Registrationpoint {
  id                 Int       @id @default(autoincrement())
  registrationpoint  String
  description        String?
  branch             Int
  status             String    @default("ACTIVE")
  datecreated        DateTime?
  createdby          Int
}

model Task {
  id                 Int       @id @default(autoincrement())
  title              String
  description        String?
  priority           String
